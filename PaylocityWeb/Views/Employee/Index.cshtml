@using Models
@model List<Employee>

<div class="col-12">
    <div class="panel">
        <div class="panel-heading">
            <a href="@Url.Action("_AddEmployee", "Employee")" class="btn btn-primary top-60 action-link-modal">
                Add new employee
            </a>
        </div>
        <div class="panel-body">
            @if (Model.Count == 0)
            {
                <h4 class="h4-head">No employees found</h4>
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr><th>Name</th><th>Last Name</th><th>Benefit Deduction</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                        <tr>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td class="text-center">
                                <a href="@Url.Action("GetDetails", "Employee", new { anEmployeeId = emp.EmployeeId })" >
                                    Details
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
                
            </div>
    </div>
</div>

<div id="empDetails" title="Employee Details"></div>
<div id="addEmp" title="Add Employee"></div>
<div id="errorMsgDetails" class="hidden"><strong>There was an error retrieving the Employee's details</strong></div>